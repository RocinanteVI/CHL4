<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/AccelerometerLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelAX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/labelAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/labelAZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accelerometerX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/accelerometerY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/accelerometerZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/GyroscopeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:gravity="center"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelGX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/labelGY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/labelGZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gyroscopeX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/gyroscopeY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/gyroscopeZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/socketStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socket Status"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/socketStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not connected"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/chooseActivityRecordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Activity: "
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Spinner
            android:id="@+id/activityChooser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_weight="2"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/recordToggle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Record"
            android:layout_weight="4"
            android:layout_margin="5dp"/>


    </LinearLayout>

</LinearLayout>